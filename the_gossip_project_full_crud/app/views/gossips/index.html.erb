
<h1 class="btn button-big">Tous les gossips</h1>
<table class="table table-dark">
    <thead><tr>
        <th scope="col">Titre</th>
        <th scope="col">Content</th>
        <th scope="col">User_creator</th>
        <th scope="col">Nb_coms</th>
    </tr></thead>
    <tbody>
        <% @gossips.each do |g| %>
        <tr>
            <td><%= g.title %></td>
            <td><%= g.content %></td>
            <td><%= g.user.name %></td>
            <td><%= g.comments.count %></td>
            <td><%= link_to "Show", gossip_path(g.id), class: 'btn btn-info' %></td>
        </tr>
        <% end %>
    </tbody>
</table>
